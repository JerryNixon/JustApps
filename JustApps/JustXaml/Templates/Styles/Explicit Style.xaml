<Grid 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid.Resources>
        <Style x:Name="CustomTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red" />
        </Style>
    </Grid.Resources>

    <StackPanel>
        <TextBlock Margin="16" Style="{StaticResource CustomTextBlockStyle}" Text="Hello world" />
        <TextBlock Margin="16" Text="Hello world" />
    </StackPanel>

</Grid>